@model SkuApplication.Models.LoginViewModel

@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>User Name:</label>
                @Html.TextBoxFor(m => m.UserName,
                new { id = "Username", @class = "form-control" })
                @Html.ValidationMessage("Username", new { style = "color:red" })
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Password, 
                new { id = "Password", @class = "form-control" })
                @Html.ValidationMessage("Password", new { style = "color:red" })
            </div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
</div>
